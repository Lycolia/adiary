*sample_html=<<HTML
<div class="hatena-module" id="<@id>" data-module-name="<@this>">
<div class="hatena-moduletitle">検索</div>
<div class="hatena-modulebody">
<form method="GET" action="./" onsubmit="return false;">
<input type="search" class="search-box w80" name="q" value="" required>
<button type="submit" class="search-btn">検索</button><br>
<span class="search-radio">
<input class="search-title" type="radio" name="all" value="0" checked><label>タイトル</label>
<input class="search-text"  type="radio" name="all" value="1"><label>全文</label>
</span>
</form>
</div> <!-- hatena-modulebody -->
</div> <!-- hatena-module -->
HTML

*module_html=<<HTML
<!--検索====================================================-->
<$ps = v.load_plgset('<@this>')>
<div class="hatena-module" id="<@id>" data-module-name="<@this>">
<@if(!ps.title_none, '<div class="hatena-moduletitle">検索</div>')>
<div class="hatena-modulebody">
<form method="GET" action="<@v.myself>">
<input type="search" class="search-box w80" name="q" value="<@tag_escape(x = Query.q)>" required>
<button type="submit" class="search-btn">検索</button><br>
<$ifset(exists(Query.all), all, Query.all, ps.all)>
<span class="search-radio">
<input class="search-title" type="radio" name="all" value="0" <@if(!all, "checked")>><label>タイトル</label>
<input class="search-text"  type="radio" name="all" value="1" <@if( all, "checked")>><label>全文</label>
</span>
</form>
</div> <!-- hatena-modulebody -->
</div> <!-- hatena-module -->
HTML
